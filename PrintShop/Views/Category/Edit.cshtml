@model Category
@{
  
  Layout = null;
}


<head>
  
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">



  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="/address/style.css" rel="stylesheet"><title>Edit</title>

</head>

@using (Html.BeginForm())
{
  <div class="container">
    <p>Add Category</p>
    
    <div class="form">
    
      <div class="fields fields--2">
        <label class="field">
                  <span class="field__label" for="firstname">Category Id</span>
                  @Html.TextBoxFor(x => x.Id, new { @class = "field__input" })
                </label>
        
        <label class="field">
          <span class="field__label" for="firstname">Category Name</span>
          @Html.TextBoxFor(x => x.Name, new {@class = "field__input"})
        </label>

        <label class="field">
          <span class="field__label" for="firstname">Category Description</span>
          @Html.TextBoxFor(x => x.Description, new {@class = "field__input"})
        </label>

        <label class="field">
          <span class="field__label" for="firstname">Image Url</span>
          @Html.TextBoxFor(x => x.ImageUrl, new {@class = "field__input"})
        </label>

      </div>
     
    </div>
    <hr>
    <button class="button">Add</button>
  </div>
}
