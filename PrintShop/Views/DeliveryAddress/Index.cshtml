<main id="main">

  <section id="portfolio" class="portfolio">
    <div class="container" data-aos="fade-up">

      <div class="section-title">
        <h2>Shop</h2>
        <p>Review Data</p>
      </div>

      <div class="row" data-aos="fade-up" data-aos-delay="100">
        <div class="col-lg-12 d-flex justify-content-center">
          <ul id="portfolio-flters">
            <li data-filter="*" class="filter-active">All</li>
            @{
              var products = ViewData["products"] as List<Product>;
              var categories = ViewData["categories"] as List<Category>;
              foreach (var category in categories)
              {
                <li data-filter=".filter-app">@category.Name</li>
              }
            }

          </ul>
        </div>
      </div>

      <div class="row portfolio-container" data-aos="fade-up" data-aos-delay="200">
        @{
          foreach (var product in products)
          {
            <div class="col-lg-4 col-md-6 portfolio-item filter-@categories.Find(c => c.Id == product.CategoryId).Name">
              <div class="portfolio-wrap">
                <img src=@product.ImageUrl class="img-fluid" style="height: auto; width: 100%" alt="Sth went wrong">
                <div class="portfolio-info">
                  <h4>@product.Name</h4>
                  <p>@product.Price lei</p>
                  <div class="portfolio-links">
                    <a href=@product.ImageUrl data-gall="portfolioGallery" class="venobox" title="App 1"><i class="bx bx-plus"></i></a>
                    @Html.ActionLink("Add To Cart", "AddToCart", null, new {id = @product.Id})

                    <a href="portfolio-details.html" title="More Details"><i class="bx bx-link"></i></a>
                  </div>
                </div>
              </div>
            </div>


          }


        }
      </div>
    </div>

  </section>
  
