@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">
   
          
          
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
          
  <!-- Vendor CSS Files -->
  <link href="~/address/style.css" rel="stylesheet">
          
</head>

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="container">
        <h1>Register</h1>
        <p>Please enter your account details.</p>
        <hr />
            
        <div class="form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="fields fields--2">
                <label class="field" asp-for="Input.Email">
                    <span asp-validation-for="Input.Email" class="field__label">Your email</span>
                    @Html.TextBoxFor(x=>x.Input.Email, new { @class = "field__input" })
                </label>

                <div class="field">
                    <span asp-validation-for="Input.Password" class="field__label">Password</span>
                    @Html.Password("Input.Password","",  new { @class = "field__input" })
                </div>

                <div class="field">
                    <span asp-validation-for="Input.ConfirmPassword" class="field__label">Confirm Password</span>
                    @Html.Password("Input.ConfirmPassword","",  new { @class = "field__input" })
                    </div>

            </div>
        </div>
        <hr>
            <button class="button">Continue</button>
    </div>
    
    
</form>


